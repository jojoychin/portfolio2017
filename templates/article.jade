
extends layout

block content
  .container
    .row.article-title
      .image-margin
        if page.metadata.video
          div.video-container
            iframe(src=page.metadata.video frameborder="0" allowfullscreen)
        else
          img(src=page.metadata.mainImage)
        h3 #{page.title}
        h5!=page.metadata.excerpt
      hr    
    .row
      .col.l4.m5.s12.project-info-container
        h2.project-sub.first Project Type
        p!=page.metadata.type
        if page.metadata.client
          h2.project-sub Client
          p!=page.metadata.client
        h2.project-sub Roles
        p!=page.metadata.roles
        if page.metadata.collaborators
          h2.project-sub Team
          p!=page.metadata.collaborators
        h2.project-sub Timeframe
        p!=page.metadata.timeframe
      .col.l8.m7.s12.project-desc
        section!= typogr(page.html).typogrify()
        br
        .valign-wrapper
          a.i.fa.fa-angle-left.nav-icon(href='/').black-text
          a(href='/').small-text.valign.black-text &nbsp back
    .row
      if page.metadata.image1
        .col.l6.m6.s12.other-images
          img.materialboxed(src=page.metadata.image1)
      if page.metadata.image2
        .col.l6.m6.s12.other-images
          img.materialboxed(src=page.metadata.image2)
    .row
      block prepend footer

