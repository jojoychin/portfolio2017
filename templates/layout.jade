doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      //- link(href='https://fonts.googleapis.com/css?family=Playfair+Display:400,900', rel='stylesheet')
      //- link(rel='stylesheet', href=contents.css['main.css'].url)
      link(href='http://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
      link(rel="stylesheet", type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css")
      link(rel='stylesheet', href=contents.css['materialize.css'].url)
      link(rel='stylesheet', href=contents.css['custom.css'].url)
      link(rel='image_src', href=contents.images['logo.png'].url)
  body(class=bodyclass)
    header.header
      nav.white.no-shadow(role='navigation')
        .nav-wrapper.container
          a#logo-container.brand-logo(href='/').black-text Joanna Chin
            h6.sub-logo.black-text interaction designer & creative technologist
          ul.right.hide-on-med-and-down
            li
              a(href='/#case-studies').black-text.nav-link Process
            li
              a(href='/#work').black-text.nav-link Work
            li
              a(href='/#about').black-text.nav-link About
          ul#slide-out.side-nav
            li
              .userView
                //- img.background(src=contents.images['bg.jpg'].url)
                a(href='#!user')
                  //- img.circle(src=contents.images['profile.jpg'].url)
                a(href='/')
                  span.name Joanna Chin
                a.i.fa.fa-linkedin-square.nav-icon.inline(href='https://www.linkedin.com/in/joanna-chin').black-text
                a.i.fa.fa-twitter-square.nav-icon.inline(href='https://twitter.com/jojoychin').black-text
                a.i.fa.fa-facebook-square.nav-icon.inline(href='https://www.facebook.com/jojoychin').black-text
                a.i.fa.fa-instagram.nav-icon.inline(href='https://www.instagram.com/jojoychin').black-text
            li
              a(href='/').waves-effect.black-text 
                //- i.material-icons cloud
                | Home
            li
              a(href='/#case-studies' data-activates='slide-out').waves-effect.black-text
                //- i.material-icons dashboard
                | Process
            li
              a(href='/#work').waves-effect.black-text 
                //- i.material-icons recent_actors
                | Work
            li
              a(href='/#about').waves-effect.black-text 
                //- i.material-icons recent_actors
                | About
            li
              a(href='mailto:joanna.y.chin@gmail.com')
                i.fa.fa-envelope.black-text.inline
                span.email.inline email
            li
              a(href="/images/resume_2016.pdf" download)
                i.fa.fa-file-o.black-text.inline
                span.email.inline CV
          a.button-collapse(href='#', data-activates='slide-out').black-text
            i.material-icons menu
      div.content
        block content
        block header
    footer
      div.content-wrap
        block footer
          section.row.copy.container
            hr      
            .col.m8.s12.copyright
              p &copy; #{ new Date().getFullYear() } Joanna Chin
              //- p &copy; #{ new Date().getFullYear() } #{ locals.owner }
            .iconSet.col.m4.s12
              .center-align
